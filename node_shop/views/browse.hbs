<div class="row">

  {{#each items}}
    <div class="col-sm-6">
      <div class="thumbnail">
        <img src="http://placehold.it/650x450&text=Product" class="img-responsive">

        <div class="caption">
          <div class="row">
            <div class="col-xs-6">
              <h4>Galaxy S5</h4>
            </div>
            <div class="col-xs-6 text-right">
              <h4>$9.99</h4>
            </div>
          </div>

          <p>32GB, 2GB Ram, 1080HD, 5.1 inches, Android</p>

          <hr>

          <div class="row">
            <div class="col-md-6">
              <a class="btn btn-primary btn-product"><span class="glyphicon glyphicon-thumbs-up"></span> Like</a> 
            </div>
            <div class="col-md-6">
              <a href="#" class="btn btn-success btn-product"><span class="glyphicon glyphicon-shopping-cart"></span> Buy</a>
            </div>
          </div>

        </div>
      </div>
    </div>
  {{/each}}
        
</div>

