<style>
h4.product-name {
  margin-top:5px;
}
</style>
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title">
          <div class="row">
            <div class="col-xs-6">
              <h5><span class="glyphicon glyphicon-shopping-cart"></span> My cart</h5>
            </div>

            <div class="col-xs-6 hidden">
              <button type="button" class="btn btn-primary btn-block">
                <span class="glyphicon glyphicon-share-alt"></span> Continue shopping
              </button>
            </div>
          </div>
        </div>
      </div>

      <div class="panel-body">
        {{#each items}}
          <div class="row">
            <div class="col-xs-2">
              <img class="img-responsive" src="{{this.photo_url}}" onerror="this.src='http://placehold.it/100x70'" />
            </div>
            <div class="col-xs-4">
              <h4 class="product-name">
                <strong>{{this.name}}</strong>
              </h4>
              <h4>
                <small>{{this.description}}</small>
              </h4>
            </div>

            <div class="col-xs-6">
              <div class="col-xs-6 text-right">
                <h5><strong>{{this.price}} <span class="text-muted">x</span></strong></h5>
              </div>
              <div class="col-xs-4">
                <input type="text" class="form-control input-sm" value="1">
              </div>
              <div class="col-xs-2">
                <form method="post" action="/cart/remove_product/{{this._id}}">
                  <button type="submit" class="btn btn-link">
                    <span class="glyphicon glyphicon-trash"> </span>
                  </button>
                </form>
              </div>
            </div>
          </div>
          <hr />
        {{/each}}

        <div class="row">
          <div class="text-center">
            <div class="col-xs-9">
              <h5 class="text-right">Added items?</h5>
            </div>
            <div class="col-xs-3">
              <a onclick="document.reload()" href="/cart" class="btn btn-default btn-block">
                Update cart
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="panel-footer">
        <div class="row text-center">
          <div class="col-xs-9">
            <h4 class="text-right">Total <strong>$50.00</strong></h4>
          </div>
          <div class="col-xs-3">
            <a href="/checkout" class="btn btn-success btn-block">
              Checkout <span class="glyphicon glyphicon-hand-right"></span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

